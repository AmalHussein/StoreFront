<h1>Your Cart</h1>

<div class="cart">
	<% @line_items.each do |item| %>
		<div>
			<%= item.product.name %>
			<%= item.product.price %>
			<%= button_to "Remove", remove_product_from_cart_path(item), method: :delete %>
		</div>
	<% end %>
	<div>Items in cart: <%= @line_items.count %></div>
	<div class='cart-total'>Total: <%= number_to_currency @line_items.sum {|item| item.product.price } %></div>
</div>